generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Curso {
  id          Int      @id @default(autoincrement())
  nome        String
  descricao   String
  preco       Float
  imagemUrl   String?
  categoria   String
  conteudo    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  User User[]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cursos   Curso[]
}
